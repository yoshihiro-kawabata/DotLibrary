<h2 style="margin: 20px;">アカウント登録</h2>
<div class="user_box">
<% if @user.errors.any? %>
  <div id="error_explanation">
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<% if @sub_user.errors.any? %>
  <div id="error_explanation">
    <ul>
    <% @sub_user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @user, local: true) do |f| %>
  <div class="d-flex flex-wrap">
    <div class="col-sm-12 col-lg-4">
        <%= f.label :登録相手： %>
    </div>
    <div class="col-sm-12 col-lg-8">
      <%= f.select(:authority, ["書店", "個人提供者"]) %>
    </div>

    <div class="col-sm-12 col-lg-4">
        <%= f.label :名前： %>
    </div>
    <div class="col-sm-12 col-lg-8">
        <%= f.text_field :name, :size => 32, :maxlength => 30, :placeholder => "名前" %>
    </div>

    <div class="col-sm-12 col-lg-4">
        <%= f.label :個人番号： %>
    </div>
    <div class="col-sm-12 col-lg-8">
        <%= f.text_field :number, :size => 32, :maxlength => 7, :placeholder => "個人番号" %>
    </div>

    <div class="col-sm-12 col-lg-4">
      <%= f.label :パスワード： %>
    </div>
    <div class="col-sm-12 col-lg-8">
      <%= f.password_field :password, :placeholder => "半角英数字6文字以上" %>
    </div>
    <div class="col-sm-12 col-lg-4">
    </div>
    <div class="col-sm-12 col-lg-8">
      <%= f.password_field :password_confirmation, :placeholder => "確認のため再入力" %>
    </div>

    <div class="col-sm-12 col-lg-4">
        <%= f.label :利用番号： %>
    </div>
    <div class="col-sm-12 col-lg-8">
        <%= f.text_field :sub_number, :size => 32, :maxlength => 7, :placeholder => "利用番号" %>
    </div>

    <div class="col-sm-12 col-lg-4">
        <%= f.label :電話番号： %>
    </div>
    <div class="col-sm-12 col-lg-8">
        <%= f.text_field :phone, :size => 32, :maxlength => 20, :placeholder => "20文字以内" %>
    </div>

    <div class="col-sm-12 col-lg-4">
        <%= f.label :FAX： %>
    </div>
    <div class="col-sm-12 col-lg-8">
        <%= f.text_field :fax, :size => 32, :maxlength => 20, :placeholder => "20文字以内" %>
    </div>

    <div class="col-sm-12 col-lg-4">
        <%= f.label :担当者： %>
    </div>
    <div class="col-sm-12 col-lg-8">
        <%= f.text_field :manager, :size => 32, :maxlength => 30, :placeholder => "30文字以内" %>
    </div>

    <div class="col-sm-12 col-lg-4">
      <%= f.label :メールアドレス： %>
    </div>
    <div class="col-sm-12 col-lg-8">
      <%= f.email_field :email, :size => 32, :placeholder => "メールアドレス" %>
    </div>

    <div class="col-sm-12 col-lg-4">
        <%= f.label :住所： %>
    </div>
    <div class="col-sm-12 col-lg-8">
      <%= f.text_area :address, maxlength: "200" ,class: "form-control",id: "exampleFormControlTextarea1", style: "height:100px; wrap:hard;" %>
    </div>

    <div class="col-sm-12 col-lg-4">
      <h4 style="margin-top: 30px;"><%= f.submit "登録", class: "btn btn-primary"  %></h4>
    </div>
    <div class="col-sm-12 col-lg-8">
      <h4 style="margin-top: 30px;"><%= link_to t('common.back'), mypage_users_path %></h4>
    </div>
  </div>
<% end %>
</div>

